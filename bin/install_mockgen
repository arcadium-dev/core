export GOBIN="${PWD}/bin"
declare -r mockgen="${GOBIN}/mockgen"

main() {
  local version="$1"

  if ! command -v "${mockgen}" &>/dev/null; then
    install "${version}"
  elif [[ "$(${mockgen} --version 2>&1)" != "${version}" ]]; then
    remove
    install "${version}"
  fi
}

install() {
  local mockgen_version="$1"

  printf "\nInstalling mockgen...\n"
	go install github.com/golang/mock/mockgen@${mockgen_version}
}

remove() {
    printf "\nRemoving mockgen...\n"
    rm -f "${mockgen}"
}

main "$@"
